<Page
    x:Class="ContactsPlus.Views.AddContact"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ContactsPlus.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <StackPanel Margin="15, 30, 0, 0" Grid.Row="0">
            <TextBlock FontSize="36" Text="Add Contact"/>
        </StackPanel>

        <StackPanel Margin="15, 90, 0, 0" Grid.Row="1">
            <TextBlock Text="First Name" TextWrapping="Wrap" />
            <TextBox x:Name="txtFirstName" TextWrapping="Wrap" Text="" />

            <TextBlock Text="Last Name" TextWrapping="Wrap" />
            <TextBox x:Name="txtLastName" TextWrapping="Wrap" Text="" />

            <TextBlock Text="Primary Number" TextWrapping="Wrap" />
            <TextBox x:Name="txtPrimaryNumber" TextWrapping="Wrap" Text="" />

            <TextBlock Text="Secondary Number" TextWrapping="Wrap" />
            <TextBox x:Name="txtSecondaryNumber" TextWrapping="Wrap" Text="" />

            <Button x:Name="buttonSave" HorizontalAlignment="Right" Content="Save" />
        </StackPanel>
    </Grid>
</Page>
